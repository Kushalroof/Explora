<% layout("layouts/boilerplate") %>
<body>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap ;
            margin-left: 2rem;
        }
        .filter{
            text-align: center;
            margin-right: 1.5rem;
            margin-top: 1rem;
            margin-bottom: 0.5rem;
            opacity: 0.6;
            text-decoration: none;
            color: black;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filter p{
            font-size: 0.9rem;
        }

        .tax-info{
            display: none;
        }
        .tax-toggle{
            margin-left: 68rem;
            margin-top: -5px;
        }
        #switchCheckDefault:checked {
            background-color: #18A558;
            border-color: #18A558;
        }
    </style>
    <div id="filters">
        <a class="filter" href="/listings?category=Trending">
            <div><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Trending</p>
        </a>
        <a class="filter" href="/listings?category=Rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
        <a class="filter" href="/listings?category=IconicCities">
            <div><i class="fa-solid fa-building"></i></div>
            <p>IconicCities</p>
        </a>
        <a class="filter" href="/listings?category=Mountains">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Mountains</p>
        </a>
        <a class="filter" href="/listings?category=Castle">
            <div><i class="fa-solid fa-chess-rook"></i></div>
            <p>Castle</p>
        </a>
        <a class="filter" href="/listings?category=Pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Pools</p>
        </a>
        <a class="filter" href="/listings?category=Treehouses">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Treehouses</p>
        </a>
        <a class="filter" href="/listings?category=Tents">
            <div><i class="fa-solid fa-tents"></i></div>
            <p>Tents</p>
        </a>
        <a class="filter" href="/listings?category=Boats">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </a>
        <a class="filter" href="/listings?category=Farms">
            <div><i class="fa-solid fa-house-chimney"></i></div>
            <p>Farms</p>
        </a>
        <a class="filter" href="/listings?category=Camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </a>
        <a class="filter" href="/listings?category=Arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
        <a class="filter" href="/listings?category=Caravan">
            <div><i class="fa-solid fa-caravan"></i></div>
            <p>Caravan</p>
        </a>
        <a class="filter" href="/listings?category=Igloo">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Igloo</p>
        </a>
        <a class="filter" href="/listings?category=Domes">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Domes</p>
        </a>
        <a class="filter" href="/listings?category=Trucks">
            <div><i class="fa-solid fa-truck"></i></div>
            <p>Trucks</p>
        </a>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch mb-3 ms-auto" style="margin-top: -10px; margin-right: 25px;">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault"><i>Display Taxes</i></label>
        </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        <% for (let listing of alllistings) { %>
            <a class="listing-link" href="/listings/<%=listing._id%>">
             <div class="card col listing-card" >
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                         <b><%=listing.title%></b><br>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%>/night&nbsp;&nbsp;
                        <i class="tax-info">+18% GST</i>
                    </p>
                </div>
         </div>
         </a>
        <% } %>
    </div>
</body>

<script>
    let taxSwitch=document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click",(req,res)=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    });
</script>